{
    "name": "growy-app",
    "version": "1.0.0",
    "description": "Growy App Backend",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "deploy": "tsc && pm2 restart 0",
        "start": "nodemon dist/index.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "clean": "rimraf dist",
        "build:watch": "npm-run-all clean --parallel watch:build watch:server --print-label",
        "watch:build": "tsc --watch",
        "watch:server": "nodemon './dist/index.js' --watch './dist'",
        "prettier": "prettier 'src/**/*.ts'",
        "prettier:fix": "prettier --write 'src/**/*.ts'",
        "lint": "eslint src --ext .ts",
        "start:dev": "tsnd --respawn --notify false --prefer-ts --ignore-watch node_modules ts-node --files -H -T src/index.ts"
    },
    "author": "Musap",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-validator": "^6.13.0",
        "jsonwebtoken": "^8.5.1",
        "luxon": "^2.3.0",
        "morgan": "^1.10.0",
        "mysql2": "^2.3.3",
        "swagger-ui-express": "^4.1.6"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.2",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/luxon": "^2.0.8",
        "@types/morgan": "^1.9.3",
        "@types/node": "^12.12.9",
        "@types/nodemailer": "^6.4.4",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "2.4.1",
        "typescript": "^4.4.4"
    }
}
